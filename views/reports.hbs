{{>sidebar curPage="Báo cáo"}}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
  <!-- Navbar -->
  {{>navbar curPage="Báo cáo"}}
  <!-- End Navbar -->
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div
              class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-1 d-flex justify-content-between align-items-center">
              <h6 class="text-white text-capitalize ps-3">Danh sách báo cáo</h6>
              <div class="row">
                <div class="col-6">
                  <button class="btn toast-btn btn-outline-white" type="button" data-target="infoToast"
                    style="background-color: transparent; color:transparent; border:none ; outline: none; box-shadow: none;"
                    disabled><i class="fa-solid fa-plus pe-1"></i>Add</button>
                </div>
                <div class="col-6">
                  <li class="nav-item dropdown pe-3 d-flex align-items-center">
                    <a href="javascript:;" class="nav-link text-body p-0 text-center" id="dropdownMenuButton"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      <button class="btn btn mb-0 me-4 bg-gradient-success toast-btn" type="button" data-target="infoToast"><i
                          class="fa-solid fa-sort"></i></button>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end px-1 py-1" aria-labelledby="dropdownMenuButton">
                      <li>
                        <a class="dropdown-item text-center" href="javascript:;"
                          onclick="sortTable('reportlocation', 'tableReport')">
                          <button class="btn btn-outline-success w-100" type="button" data-target="infoToast"
                            ><i
                              class="fa-solid fa-arrow-up-a-z pe-1"></i>Địa chỉ
                          </button>
                        </a>
                      </li>
                      <li>
                        <a class="dropdown-item text-center" href="javascript:;"
                          onclick="sortTable('reportername', 'tableReport')">
                          <button class="btn btn-outline-success w-100" type="button" data-target="infoToast"
                            ><i
                              class="fa-solid fa-arrow-up-a-z pe-1"></i>Tên người gửi
                          </button>
                        </a>
                      </li>
                      <li>
                        <a class="dropdown-item text-center" href="javascript:;"
                          onclick="sortTable('typeofreport', 'tableReport')">
                          <button class="btn btn-outline-success w-100" type="button" data-target="infoToast">
                            <i class="fa-solid fa-arrow-up-a-z pe-1"></i>Hình thức báo cáo
                          </button>
                        </a>
                      </li>
                    </ul>
                  </li>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0" id="filteredContent">
              <table id="tableReport" class="table align-items-center justify-content-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      Địa chỉ</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                      Người gửi</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                      Hình thức báo cáo</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7">
                      Tình trạng</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7">
                      Tùy chọn</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each reports}}
                  <tr data-reportlocation="{{reportlocation}}" data-reportername="{{reportername}}"
                    data-typeofreport="{{typeofreport}}">
                    <td>
                      <div class="d-flex px-2">
                        <div>
                          <img src="../{{imagepath1}}" class="avatar avatar-sm me-3 border-radius-lg" alt="spotify">
                        </div>
                        <div class="my-auto">
                          <h6 class="mb-0 text-sm">{{reportlocation}}</h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="text-xs">{{reportername}}</span>
                    </td>
                    <td class="align-middle text-center">
                      <div class="d-flex align-items-center">
                        <span class="me-2 text-xs">{{typeofreport}}</span>
                      </div>
                    </td>
                    <td class="align-middle text-center">
                      <span
                        class="me-2 text-xs font-weight-bold {{#if handlemethod}}text-success{{else}}text-danger{{/if}}">
                        {{#if handlemethod}}
                        Đã xử lý
                        {{else}}
                        Đang xử lý
                        {{/if}}</span>
                    </td>
                    <td class="align-middle" style="white-space : normal; ">
                      <i role="button" class="fa fa-pen-to-square text-info ms-7" data-bs-toggle="modal"
                        data-bs-target="#handleMethod" onclick="showHandleMethod(this)" data-id="{{id}}"
                        data-reportername="{{reportername}}" data-typeofreport="{{typeofreport}}"
                        data-reporterphonenumber="{{reporterphonenumber}}" data-reporteremail="{{reporteremail}}"
                        data-reportcontent="{{{reportcontent}}}" data-handlemethod="{{handlemethod}}"
                        data-reportlocation="{{reportlocation}}" data-imagepath1="{{imagepath1}} "
                        data-imagepath2="{{imagepath2}}"></i>

                         <i role="button" class="bi bi-envelope-arrow-up-fill text-info ms-3 email-report-btn" data-id="{{id}}"
                        data-reportername="{{reportername}}" data-typeofreport="{{typeofreport}}"
                        data-reporterphonenumber="{{reporterphonenumber}}" data-reporteremail="{{reporteremail}}"
                        data-reportcontent="{{{reportcontent}}}" data-handlemethod="{{handlemethod}}"
                        data-reportlocation="{{reportlocation}}"></i>

                      <!-- modal -->
                      <div class="modal fade" id="handleMethod" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                          <form action="" id="handleMethodForm" onsubmit="editReport(event)">
                            <div class="modal-content">
                              <div class="modal-header">
                                <div class="col-5 px-2">
                                  <h5 class="modal-title" id="staticBackdropLabelward">Báo Cáo</h5>
                                </div>
                                <div class="col-6 px-2 d-flex status">
                                  <h6 class="modal-title text-danger">
                                    <span class="font-weight-bold text-secondary">Tình
                                      trạng:</span>
                                    <span id="tinhTrangXL" class="me-2 font-weight-bold span-content"></span>
                                  </h6>
                                </div>
                                <div class="col-1 px-4">
                                  <button class="btn-close toast-btn" type="button" data-bs-dismiss="modal"
                                    aria-label="Close" data-target="infoToast" style="margin-bottom: 0;"><i
                                      class="fa fa-times-circle text-danger  fs-4" aria-hidden="true"></i></button>
                                </div>
                              </div>
                              <div class="modal-body">
                                <div class="container-fluid">
                                  <h6 class="text-primary reportlocation"></h6>
                                  <div class="row">
                                    <h6>Phần 1: Thông Tin Báo Cáo</h6>
                                    <div class="card h-100">
                                      <div class="card-body">
                                        <div class="row g-2">
                                          <div class="col mb-3">
                                            <label for="reportername" class="form-label">Người báo cáo</label>
                                            <input type="text" id="reportername" name="reportername"
                                              class="form-control" placeholder="" disabled />
                                          </div>
                                          <div class="col mb-3">
                                            <label for="reporterphonenumber" class="form-label">Số điện thoại</label>
                                            <input type="text" id="reporterphonenumber" name="reporterphonenumber"
                                              class="form-control" placeholder="" disabled />
                                          </div>
                                        </div>
                                        <div class="row g-2">
                                          <div class="col mb-3">
                                            <label for="reporteremail" class="form-label">Email</label>
                                            <input type="text" id="reporteremail" name="reporteremail"
                                              class="form-control" placeholder="" disabled />
                                          </div>
                                          <div class="col mb-3">
                                            <label for="typeofreport" class="form-label">Hình thức báo cáo</label>
                                            <input type="text" id="typeofreport" name="typeofreport"
                                              class="form-control" placeholder="" disabled />
                                          </div>
                                        </div>
                                        <div class="row g-2">
                                          <div class="col mb-3">
                                            <label for="reportcontent" class="form-label">Nội dung báo cáo</label>
                                            <input type="text" id="reportcontent" name="reportcontent"
                                              class="form-control" placeholder="" disabled />
                                          </div>
                                        </div>
                                        <div class="col mb-3">
                                          <label for="handlemethod" class="form-label">Cách thức xử lý</label>
                                          <input type="text" id="handlemethod" name="handlemethodedit"
                                            class="form-control form-reason" placeholder="" disabled />
                                        </div>
                                        <span class="fw-bold ps-1">Thời điểm xử lý: </span>
                                          <script>
                                            var currentDate = new Date();
                                            var day = currentDate.getDate();
                                            var month = currentDate.getMonth() + 1; // Adding 1 to get the correct month
                                            var year = currentDate.getFullYear();
                                            document.write(day + '/' + month + '/' + year);
                                          </script>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="row pt-3 pb-3">
                                    <h6>Phần 2: Hình ảnh </h6>
                                    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
                                      <ol class="carousel-indicators">
                                        <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"
                                          aria-current="true" aria-label="First slide"></li>
                                        <li data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Second slide">
                                        </li>
                                      </ol>
                                      <div class="carousel-inner" role="listbox">
                                        <div class="carousel-item active">
                                          <img id="imagepath1" class="card-img slide-image w-100 d-block i"
                                            alt="Không có ảnh">
                                        </div>
                                        <div class="carousel-item">
                                          <img id="imagepath2" class="card-img slide-image w-100 d-block"
                                            alt="Không có ảnh">
                                        </div>
                                      </div>
                                      <button class="carousel-control-prev" type="button" data-bs-target="#carouselId"
                                        data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                      </button>
                                      <button class="carousel-control-next" type="button" data-bs-target="#carouselId"
                                        data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                      </button>
                                    </div>
                                  </div>
                                </div>
                                <div class="modal-footer" style="justify-content: space-around;">
                                  <input type="hidden" name="id" id="idReport" value="" />
                                  <button id="xuly" type="submit" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-dismiss="modal" disabled>Xử
                                    lý</button>
                                </div>
                              </div>
                          </form>
                        </div>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{>footer}}
  </div>
</main>